<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="installments_payment_view_kanban" model="ir.ui.view">
        <field name="name">installments.payment.view.kanban</field>
        <field name="model">installments.payment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="remaining" widget="monetary"/>
                <field name="state"/>
                <field name="tenor"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                </div>
                                <strong><field name="remaining" widget="monetary"/></strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left text-muted">
                                    <span><t t-esc="record.tenor.value"/> Month</span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'cancel': 'default', 'approved': 'primary', 'done': 'success'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="installments_payment_view_tree" model="ir.ui.view">
        <field name="name">installments.payment.view.tree</field>
        <field name="model">installments.payment</field>
        <field name="arch" type="xml">
            <tree string="Installments Payment" decoration-bf="message_needaction==True" decoration-muted="state=='cancel'">
                <field name="message_needaction" invisible="1"/>
                <field name="name"/>
                <field name="asset"/>
                <field name="tenor"/>
                <field name="total_amount" widget="monetary"/>
                <field name="remaining" widget="monetary"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="installments_payment_view_form" model="ir.ui.view">
        <field name="name">installments.payment.view.form</field>
        <field name="model">installments.payment</field>
        <field name="arch" type="xml">
            <form string="Installments Payment" class="o_sale_order">
                <header>
                    <button name="print_doc" string="Print" type="object" states="draft,approved" class="btn-primary o_sale_print"/>
                    <button name="action_approve"
                        string="Approve" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_cancel" states="draft,approved" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Draft"/>
                    <button name="calculate" string="Calculate" type="object" states="draft"/>
                    <button name="process_back" string="Process" type="object" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="total_amount" widget="monetary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="down_payment" widget="monetary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="main_debt" widget="monetary" readonly="1"/>
                            <field name="tenor" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="interest_type" readonly="1"/>
                            <field name="interest" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="installments" widget="monetary" readonly="1"/>
                            <field name="installments_corr" widget="monetary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="payment_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="asset"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="payment_lines" string="Payment Lines">
                            <field name="line_ids"
                                widget="section_and_note_one2many"
                                mode="tree"
                            >
                                <!-- attrs="{'readonly': True}" -->
                                <tree string="Payment Lines">
                                    <field name="doc_id" invisible="1" readonly="1"/>
                                    <field name="order" invisible="1" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="interest" widget="monetary" readonly="1"/>
                                    <field name="main_debt" widget="monetary" readonly="1"/>
                                    <field name="amount" widget="monetary" readonly="1"/>
                                    <field name="next_payment"/>
                                    <field name="payment_date" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="journal_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="remaining"/>
                                </div>
                                <field name="remaining" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}" readonly="1"/>
                            </group>
                            <div class="oe_clear"/>
                            <group>
                                <button name="compute_installments" string="Compute Installments" type="object" states="draft" class="btn-sm"/>
                            </group>
                        </page>
                        <page name="other_info_ip" string="Other Information">
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="confirmation_date" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                                <field name="approver_id" invisible="1" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="next_payment_date" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_installments_payment_filter" model="ir.ui.view">
        <field name="name">installments.payment.list.select</field>
        <field name="model">installments.payment</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Installments Payment">
                <field name="name" string="Installments Payment" filter_domain="[('name','ilike',self)]"/>
                <field name="user_id"/>
                <filter string="My Installments" domain="[('user_id','=',uid)]" name="my_installments_payments_filter"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Submitter" name="submitter" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Type" name="type" domain="[]" context="{'group_by':'type'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payments" model="ir.actions.act_window">
        <field name="name">Installments Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">installments.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_installments_payment_filter"/>
        <field name="context">{'search_default_state': 1}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new draft, the first step of a new installments!
            </p><p>
                Once the draft is confirmed, it becomes a installments payment.
            </p>
        </field>
    </record>

    <record id="installments_payment_action_view_order_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="installments_payment.installments_payment_view_tree"/>
        <field name="act_window_id" ref="action_payments"/>
    </record>

    <record id="installments_payment_action_view_order_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="installments_payment.installments_payment_view_kanban"/>
        <field name="act_window_id" ref="action_payments"/>
    </record>

    <record id="installments_payment_action_view_order_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="installments_payment.installments_payment_view_form"/>
        <field name="act_window_id" ref="action_payments"/>
    </record>

    <menuitem 
        id="menu_installments_payment"
        name="Installments"
        action="action_payments"
        parent="account.menu_finance"
        sequence="10" 
    />

</odoo>
