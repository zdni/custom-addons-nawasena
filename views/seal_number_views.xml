<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="seal_number_view_tree" model="ir.ui.view">
        <field name="name">seal.number.view.tree</field>
        <field name="model">seal.number</field>
        <field name="arch" type="xml">
            <tree string="Seal Number" editable="bottom">
                <field name="name" />
                <field name="is_used" />
            </tree>
        </field>
    </record>

    <record id='seal_number_action' model='ir.actions.act_window'>
        <field name="name">Seal Number</field>
        <field name="res_model">seal.number</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add new Seal Number.
          </p>
        </field>
    </record>

    <menuitem
        id="seal_number_menu_root"
        name="Seal Number"
        parent="sale.menu_sale_config"
        sequence="10"/>

    <menuitem
        id="seal_number_menu"
        name="Seal Number"
        action="custom_delivery.seal_number_action"
        parent="custom_delivery.seal_number_menu_root"
        sequence="10"/>

</odoo>
