<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_request_view_tree" model="ir.ui.view">
        <field name="name">payment.request.view.tree</field>
        <field name="model">payment.request</field>
        <field name="arch" type="xml">
            <tree string="Payment Request" decoration-bf="message_needaction==True" decoration-muted="state=='cancel'">
                <field name="message_needaction" invisible="1"/>
                <field name="name"/>
                <field name="amount_total" />
                <field name="remaining_amount" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="payment_request_view_form" model="ir.ui.view">
        <field name="name">payment.request.view.form</field>
        <field name="model">payment.request</field>
        <field name="arch" type="xml">
            <form string="Payment Request" class="o_sale_order">
                <header>
                    <button name="print_doc" string="Print" type="object" states="draft,approved,done" class="btn-primary o_sale_print"/>
                    <button name="action_approve"
                        string="Approve" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_cancel" states="draft,approved" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="payment_journal_id" />
                        <field name="payment_date" />
                        <button name="apply_for_all_line" string="Apply for All Line" type="object" class="btn btn-sm" attrs="{'invisible': [('state', '=', 'done')]}" />
                    </group>
                    <notebook>
                        <page name="lines" string="Payment Lines">
                            <field name="line_ids"
                                widget="section_and_note_one2many"
                                mode="tree"
                                attrs="{'readonly': [('state', 'in', ['done'])]}"
                            >
                                <tree string="Payment Lines" editable="bottom">
                                    <field name="payment_id" invisible="1"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="communication" readonly="1"/>
                                    <field name="journal_id"/>
                                    <field name="payment_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="remaining_amount"/>
                                </div>
                                <field name="remaining_amount" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page name="other_info" string="Other Information">
                            <group>
                                <field name="create_date" />
                                <field name="user_id"/>
                                <field name="approver_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_payment_request_filter" model="ir.ui.view">
        <field name="name">payment.request.list.select</field>
        <field name="model">payment.request</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Payment Request">
                <field name="name" string="Payment Request" filter_domain="[('name','ilike',self)]"/>
                <field name="user_id"/>
                <filter string="My Request" domain="[('user_id','=',uid)]" name="my_payment_requests_filter"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Submitter" name="submitter" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payment_request" model="ir.actions.act_window">
        <field name="name">Payment Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_payment_request_filter"/>
        <field name="context">{}</field>
        <field name="domain">[('state', 'not in', ('draft', 'cancel'))]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new draft, the first step of a new request!
            </p><p>
                Once the draft is confirmed, it becomes a payment request.
            </p>
        </field>
    </record>

    <record id="payment_request_action_view_order_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="payment_request.payment_request_view_tree"/>
        <field name="act_window_id" ref="action_payment_request"/>
    </record>

    <record id="payment_request_action_view_order_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payment_request.payment_request_view_form"/>
        <field name="act_window_id" ref="action_payment_request"/>
    </record>

    <!-- <menuitem
        id="menu_payment_request"
        name="Payment"
        action="action_payment_request"
        parent="payment_request.payment_request_menu"
        sequence="10"
    /> -->

</odoo>
