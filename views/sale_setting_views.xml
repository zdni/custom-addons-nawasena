<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setting_product_pricelist_view_tree" model="ir.ui.view">
        <field name="name">setting.product.pricelist.view.tree</field>
        <field name="model">setting.product.pricelist</field>
        <field name="arch" type="xml">
            <tree string="Product" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_id" />
            </tree>
        </field>
    </record>

    <record id='setting_product_pricelist_action' model='ir.actions.act_window'>
        <field name="name">Products Pricelist</field>
        <field name="res_model">setting.product.pricelist</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add new Product to Pricelist.
          </p>
        </field>
    </record>

    <menuitem
        id="setting_prod_pricelist_menu"
        name="Products Pricelist"
        action="custom_customer.setting_product_pricelist_action"
        parent="sale.menu_sale_config"
        sequence="10"/>

</odoo>
