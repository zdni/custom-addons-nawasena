<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="handover_conditions_view_tree" model="ir.ui.view">
        <field name="name">handover.conditions.view.tree</field>
        <field name="model">handover.conditions</field>
        <field name="arch" type="xml">
            <tree string="Handover Conditions" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id='set_handover_conditions_action' model='ir.actions.act_window'>
        <field name="name">Handover Conditions</field>
        <field name="res_model">handover.conditions</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add new Handover Conditions.
          </p>
        </field>
    </record>

    <menuitem
        id="set_handover_conditions_menu"
        name="Handover Conditions"
        action="custom_delivery.set_handover_conditions_action"
        parent="sale.menu_sale_config"
        sequence="10"/>

</odoo>
