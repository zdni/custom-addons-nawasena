<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_pr_expenses">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure" />
                    
                    <center>
                        <h3>PAYMENT REQUEST EXPENSE</h3>
                        <h4><t t-esc="docs.name"/></h4>
                        <p><t t-esc="docs.start_date" t-options="{'widget': 'date','format': 'dd MMM yyyy'}"/> - <t t-esc="docs.end_date" t-options="{'widget': 'date','format': 'dd MMM yyyy'}"/></p>
                    </center>

                    <div class="mb32 mt32">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Payment</th>
                                    <th>Pembayaran</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="number" t-value="0"/>
                                <t t-set="total_expense" t-value="0"/>
                                <t t-foreach="docs.line_ids" t-as="line">
                                    <t t-set="number" t-value="number + 1"/>
                                    <t t-set="total_expense" t-value="total_expense + line.amount"/>
                                    <tr style="border: 1px solid #DEE2E6 !important;">
                                        <td><t t-esc="number"/></td>
                                        <td><t t-esc="line.sheet_id.bank_journal_id.name"/></td>
                                        <td><t t-esc="line.sheet_id.name"/></td>
                                        <td class="text-right"><t t-esc="line.amount" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="row mb32">
                        <div class="col-8"></div>
                        <div class="col-4">
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <th>Total</th>
                                    <td class="text-right"><t t-esc="total_expense" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <table class="table table-sm table-bordered">
                        <tr>
                            <th class="text-center">Dibuat Oleh</th>
                            <th class="text-center">Payment</th>
                            <th class="text-center">Checked</th>
                            <th class="text-center">Approved</th>
                        </tr>
                        <tr>
                            <td class="text-center" style="height: 100px;"></td>
                            <td class="text-center" style="height: 100px;">
                                <img src="/pr_expenses/static/img/signature-director.png" style="height: 80px; margin-top: 10px;"/>
                            </td>
                            <td class="text-center" style="height: 100px;"></td>
                        </tr>
                        <tr>
                            <td class="text-center"><t t-esc="docs.user_id.name"/></td>
                            <td class="text-center"><t t-esc="docs.user_id.name"/></td>
                            <td class="text-center">Dedy Kurniawan</td>
                            <td class="text-center">Direktur</td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>
