<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@class='page']" position="attributes">
            <attribute name="style" value="padding-top: 20px;">padding-top: 20px;</attribute>
        </xpath>
        <xpath expr="//div[@class='page']//table[1]" position="attributes">
            <attribute name="class" value="table table-sm table-bordered">table table-sm table-bordered</attribute>
            <attribute name="style" value="font-size: 12px;">font-size: 12px;</attribute>
        </xpath>
        <xpath expr="//div[@class='page']//table[1]//thead//tr//th[1]" position="after">
            <th><strong>Vehicle</strong></th>
        </xpath>
        <xpath expr="//div[@class='page']//table[1]//tbody//tr//td[1]" position="after">
            <td>
                <span t-field="line.vehicle_id.name" />
            </td>
        </xpath>
        <xpath expr="//div[@class='page']" position="inside">
            <div class="row mt32">
                <div class="col-3 text-center">
                    <p style="height: 80px;">Dibuat Oleh</p>
                    <p class="mb-0"><b><u><t t-esc="o.user_id.name"/></u></b></p>
                    <p>Admin PO</p>
                </div>
                <div class="col-3 text-center">
                    <p style="height: 80px;">Dibayar Oleh</p>
                    <p>Accounting</p>
                </div>
                <div class="col-3 text-center">
                    <p style="height: 80px;">Disetujui Oleh</p>
                    <p class="mb-0"><b><u>Dedy Kurniawan</u></b></p>
                    <p>Manager</p>
                </div>
                <div class="col-3 text-center">
                    <p style="height: 80px;">Mengetahui</p>
                    <p>Direktur</p>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
