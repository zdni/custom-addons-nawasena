<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="view_report_transport_wizard" model="ir.ui.view">
            <field name="name">report.transport.wizard.form</field>
            <field name="model">report.transport.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Transport">
                    <group>
                        <group>
                            <field name="start_date" /> 
                        </group>
                        <group>
                            <field name="end_date" /> 
                        </group>
                    </group>
                    <group>
                        <field name="customer_ids"  widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/> 
                    </group>
                    <footer>
                        <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                        <button name="generate_excel" string="Excel" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_report_transport_wizard"
                name="Report Transport"
                res_model="report.transport.wizard"
                view_mode="form"
                target="new"/>

        <menuitem action="action_report_transport_wizard"
                id="menu_report_transport_wizard"
                parent="sale.menu_sale_report"/>

    </data>
    
</odoo>
