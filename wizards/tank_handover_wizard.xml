<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tank_handover_wizard_view_form" model="ir.ui.view">
        <field name="name">tank.handover.wizard.view.form</field>
        <field name="model">tank.handover.wizard</field>
        <field name="arch" type="xml">
            <form string="Tank Handover">
                <p class="oe_grey">
                    Document will be created automatically so that you can review them.
                </p>
                <group>
                    <group>
                        <field name="consignor_driver_id" />
                        <field name="order_id" />
                    </group>
                    <group>
                        <field name="consignee_driver_id" />
                        <field name="vehicle_id" />
                        <field name="location" />
                    </group>
                </group>
                <footer>
                    <button name="create_docs" string="Create Doc" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    ir<record id="tank_handover_wizard_action" model="ir.actions.act_window">
        <field name="name">Tank Handover</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tank.handover.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
    </record>

</odoo>
